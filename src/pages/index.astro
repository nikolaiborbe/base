---

<BaseLayout title="Software Memes">
  <div class="page">
    <header>
      <h1>Software Memes</h1>
      <p class="subtitle">Because if we don't laugh, we'll cry</p>
    </header>

    <div class="grid">
      {memes.map((meme) => (
        <div class="meme-card" style={`background: ${meme.bg};`}>
          <span class="meme-emoji">{meme.emoji}</span>
          <p class="meme-top">{meme.top}</p>
          {meme.bottom && <p class="meme-bottom">{meme.bottom}</p>}
        </div>
      ))}
    </div>

    <footer>
      <p>Made with mass-produced serotonin</p>
    </footer>
  </div>
</BaseLayout>

<style>
  .page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 24px;
  }

  header {
    text-align: center;
    margin-bottom: 48px;
  }

  header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.03em;
  }

  .subtitle {
    color: var(--text-dim);
    margin-top: 8px;
    font-size: 1.1rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 20px;
  }

  .meme-card {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 32px 28px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 240px;
    gap: 16px;
    transition: transform 0.2s, box-shadow 0.2s;
    position: relative;
    overflow: hidden;
  }

  .meme-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .meme-emoji {
    font-size: 3rem;
    line-height: 1;
  }

  .meme-top {
    font-family: 'Impact', 'Arial Black', sans-serif;
    font-size: 1.2rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #fff;
    text-shadow: 2px 2px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000;
    letter-spacing: 0.02em;
    line-height: 1.3;
  }

  .meme-bottom {
    font-family: 'Impact', 'Arial Black', sans-serif;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--accent);
    text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.8);
    letter-spacing: 0.02em;
    line-height: 1.4;
  }

  footer {
    text-align: center;
    margin-top: 64px;
    padding-top: 24px;
    border-top: 1px solid var(--border);
    color: var(--text-dim);
    font-size: 0.85rem;
  }

  @media (max-width: 700px) {
    .page {
      padding: 24px 16px;
    }

    header h1 {
      font-size: 1.8rem;
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .meme-card {
      min-height: 200px;
      padding: 24px 20px;
    }
  }
</style>
