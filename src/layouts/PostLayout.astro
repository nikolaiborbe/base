---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  date: Date;
  description: string;
  tags?: string[];
}

const { title, date, description, tags } = Astro.props;

const formatted = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={`${title} â€” IPD Lab`} description={description}>
  <div class="page">
    <nav class="breadcrumb">
      <a href="/">IPD Lab</a>
      <span>/</span>
      <a href="/devlog/">Dev Log</a>
    </nav>

    <article>
      <header>
        <time datetime={date.toISOString()}>{formatted}</time>
        <h1>{title}</h1>
        <p class="desc">{description}</p>
        {
          tags && tags.length > 0 && (
            <div class="tags">
              {tags.map((t) => (
                <span class="tag">{t}</span>
              ))}
            </div>
          )
        }
      </header>

      <div class="prose">
        <slot />
      </div>
    </article>

    <footer>
      <a href="/devlog/">&larr; Back to Dev Log</a>
    </footer>
  </div>
</BaseLayout>

<style>
  .page {
    max-width: 760px;
    margin: 0 auto;
    padding: 2.5rem 1.5rem 5rem;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-dim);
    margin-bottom: 2.5rem;
  }

  .breadcrumb a {
    color: var(--text-dim);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--text);
  }

  article header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  time {
    display: block;
    font-size: 0.85rem;
    color: var(--text-dim);
    font-family: var(--mono);
    margin-bottom: 0.5rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }

  .desc {
    font-size: 1.05rem;
    color: var(--text-dim);
    line-height: 1.6;
  }

  .tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .tag {
    font-size: 0.75rem;
    font-family: var(--mono);
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 0.2rem 0.5rem;
    color: var(--text-dim);
  }

  .prose {
    line-height: 1.75;
    font-size: 1rem;
  }

  .prose :global(h2) {
    font-size: 1.4rem;
    font-weight: 700;
    margin: 2.5rem 0 0.75rem;
    letter-spacing: -0.01em;
  }

  .prose :global(h3) {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 2rem 0 0.5rem;
  }

  .prose :global(p) {
    margin-bottom: 1.25rem;
    color: var(--text);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 0 0 1.25rem 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.35rem;
  }

  .prose :global(code) {
    font-family: var(--mono);
    font-size: 0.875em;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 0.15em 0.4em;
  }

  .prose :global(pre) {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1rem 1.25rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .prose :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    font-size: 0.875rem;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    color: var(--text-dim);
    margin: 1.5rem 0;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .prose :global(th),
  .prose :global(td) {
    text-align: left;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .prose :global(th) {
    color: var(--text-dim);
    font-weight: 600;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2.5rem 0;
  }

  footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  footer a {
    color: var(--text-dim);
    text-decoration: none;
    font-size: 0.9rem;
  }

  footer a:hover {
    color: var(--text);
  }
</style>
